<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hostel Mess Menu</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      .gradient {
        background: linear-gradient(90deg, #004aad 0%, #cb6ce6 100%);
      }
      body {
        font-family: "Poppins", sans-serif;
      }

      /* Hero section styling */
      .hero-section {
        background: linear-gradient(135deg, #004aad 0%, #cb6ce6 100%);
        height: 45vh;
        min-height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 1rem;
        position: relative;
        overflow: hidden;
      }

      .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="20" height="20" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><rect width="1" height="1" fill="rgba(255,255,255,0.05)"/></svg>');
        opacity: 0.1;
      }

      .meal-card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        border: 1px solid rgba(0, 74, 173, 0.1);
        transition: all 0.3s ease;
        border-radius: 1rem;
        overflow: hidden;
      }

      .meal-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 74, 173, 0.1);
      }

      .meal-icon {
        background: linear-gradient(135deg, #004aad 0%, #cb6ce6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .feedback-form {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        border-radius: 1rem;
        border: 1px solid rgba(0, 74, 173, 0.1);
        box-shadow: 0 4px 6px rgba(0, 74, 173, 0.05);
      }

      .feedback-form select,
      .feedback-form textarea {
        border: 2px solid rgba(0, 74, 173, 0.1);
        border-radius: 0.75rem;
        transition: all 0.3s ease;
      }

      .feedback-form select:focus,
      .feedback-form textarea:focus {
        border-color: #004aad;
        box-shadow: 0 0 0 3px rgba(0, 74, 173, 0.1);
      }

      .feedback-form button {
        background: linear-gradient(135deg, #004aad 0%, #cb6ce6 100%);
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
      }

      .feedback-form button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
      }

      .feedback-form button:hover::before {
        left: 100%;
      }

      .average-rating {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(147, 51, 234, 0.1));
        border-radius: 0.75rem;
        border: 1px solid rgba(59, 130, 246, 0.2);
        margin-bottom: 1.5rem;
      }

      .average-rating i {
        color: #fbbf24;
        font-size: 1.25rem;
      }

      .average-rating span {
        font-weight: 600;
        color: #1f2937;
        font-size: 1.1rem;
      }

      .average-rating small {
        color: #6b7280;
        font-size: 0.875rem;
      }

      .meal-item {
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        transition: all 0.2s ease;
      }

      .meal-item:hover {
        background: rgba(0, 74, 173, 0.05);
      }

      .meal-item::before {
        content: '';
        width: 0.5rem;
        height: 0.5rem;
        background: linear-gradient(135deg, #004aad 0%, #cb6ce6 100%);
        border-radius: 50%;
        margin-right: 1rem;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        .hero-section {
          height: 35vh;
          min-height: 300px;
        }

        .hero-title {
          font-size: 2rem !important;
        }

        .accordion-button {
          padding: 1rem !important;
        }

        .meal-button {
          padding: 0.75rem !important;
        }

        .feedback-form {
          padding: 1rem !important;
        }
      }

      @media (max-width: 480px) {
        .hero-section {
          height: 30vh;
          min-height: 250px;
        }

        .hero-title {
          font-size: 1.75rem !important;
        }

        .day-name {
          font-size: 1rem !important;
        }

        .meal-name {
          font-size: 0.875rem !important;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <%- include('partials/navbar.ejs', { loggedIn }) %>

    <!-- Hero Section -->
    <div class="hero-section shadow-lg relative">
      <div class="max-w-4xl mx-auto relative z-10 mt-20">
        <h1 class="hero-title text-4xl md:text-5xl font-bold mb-6 text-white">
          MESS MENU
        </h1>
        <p class="text-xl md:text-2xl opacity-90 mb-8">
          Discover our weekly culinary delights and share your experience
        </p>
        <div class="flex justify-center items-center space-x-4 mb-8">
          <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full border border-white/20">
            <i class="fas fa-calendar-alt mr-2"></i>
            <span class="text-base sm:text-lg">7 Days</span>
          </div>
          <div class="bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full border border-white/20">
            <i class="fas fa-utensils mr-2"></i>
            <span class="text-base sm:text-lg">4 Meals</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12 mb-4">
      <% if (query.feedback === 'success') { %>
      <div class="mb-6 p-4 bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 text-green-800 rounded-lg shadow-sm">
        <div class="flex items-center">
          <i class="fas fa-check-circle mr-2"></i>
          Thank you for your valuable feedback!
        </div>
      </div>
      <% } %>

      <div id="accordion-menu" class="space-y-6">
        <% ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'].forEach((day, dayIndex) => { %>
        <div class="meal-card rounded-xl shadow-sm hover:shadow-md transition-all duration-200">
          <h2 id="accordion-heading-<%= dayIndex %>">
            <button
              type="button"
              class="flex items-center justify-between w-full p-6 font-medium text-gray-700 border-b border-gray-200 rounded-t-xl hover:bg-gray-50 accordion-button transition-colors duration-200"
              data-accordion-target="#accordion-body-<%= dayIndex %>"
              aria-expanded="false"
              aria-controls="accordion-body-<%= dayIndex %>"
            >
              <div class="flex items-center">
                <i class="fas fa-calendar-day meal-icon text-2xl mr-3"></i>
                <span class="text-xl font-semibold day-name"><%= day %></span>
              </div>
              <svg
                class="w-5 h-5 transform transition-transform duration-300"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 10 6"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5 5 1 1 5"
                />
              </svg>
            </button>
          </h2>

          <div id="accordion-body-<%= dayIndex %>" class="hidden">
            <% ['Breakfast', 'Lunch', 'Snacks', 'Dinner'].forEach((meal, mealIndex) => { %>
            <div class="border-t border-gray-100 p-4">
              <button
                type="button"
                class="flex items-center justify-between w-full p-4 font-medium text-gray-700 bg-gradient-to-r from-gray-50 to-gray-100 border border-gray-200 rounded-lg hover:from-gray-100 hover:to-gray-200 meal-button transition-all duration-200"
                data-accordion-target="#meal-body-<%= dayIndex %>-<%= mealIndex %>"
                aria-expanded="false"
                aria-controls="meal-body-<%= dayIndex %>-<%= mealIndex %>"
              >
                <div class="flex items-center">
                  <i class="fas <%= meal === 'Breakfast' ? 'fa-coffee' : meal === 'Lunch' ? 'fa-utensils' : meal === 'Snacks' ? 'fa-cookie' : 'fa-moon' %> meal-icon text-xl mr-3"></i>
                  <span class="meal-name text-lg"><%= meal %></span>
                </div>
                <svg
                  class="w-5 h-5 transform transition-transform duration-300"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 10 6"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5 5 1 1 5"
                  />
                </svg>
              </button>

              <div
                id="meal-body-<%= dayIndex %>-<%= mealIndex %>"
                class="hidden mt-4 bg-white rounded-lg p-4 border border-gray-200"
              >
                <!-- Average Rating Display -->
                <% const ratingKey = `${day}-${meal}`; %>
                <% if (averageRatings[ratingKey]) { %>
                    <div class="average-rating">
                        <i class="fas fa-star"></i>
                        <span><%= averageRatings[ratingKey].average %></span>
                        <small>(<%= averageRatings[ratingKey].count %> reviews)</small>
                    </div>
                <% } else { %>
                    <div class="average-rating">
                        <i class="fas fa-star"></i>
                        <span>No ratings yet</span>
                    </div>
                <% } %>

                <div class="space-y-2">
                  <% menuItems.filter(item => item.day === day && item.mealType === meal).forEach(item => { %>
                  <div class="flex items-center py-2 text-gray-700">
                    <span class="w-2 h-2 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full mr-3"></span>
                    <span class="text-base">
                      <%= item.name %> 
                      <% if(item.alternateWeek) { %>
                      <span class="text-gray-400 italic ml-2 text-sm">(Alternate)</span>
                      <% } %> 
                      <% if(item.seasonal) { %>
                      <span class="text-green-500 font-medium ml-2 text-sm">(Seasonal)</span>
                      <% } %>
                    </span>
                  </div>
                  <% }); %>
                </div>

                <!-- Feedback Form -->
                <div class="mt-6 feedback-form p-8">
                    <h3 class="text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-6">
                        Share your feedback
                    </h3>
                    <form action="/feedback" method="POST" class="space-y-6">
                        <input type="hidden" name="day" value="<%= day %>" />
                        <input type="hidden" name="mealType" value="<%= meal %>" />

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-3">
                                Rate this meal
                            </label>
                            <select
                                name="rating"
                                class="w-full px-4 py-3 text-base"
                            >
                                <option value="">Select…</option>
                                <option value="5">⭐⭐⭐⭐⭐ Excellent</option>
                                <option value="4">⭐⭐⭐⭐ Very Good</option>
                                <option value="3">⭐⭐⭐ Good</option>
                                <option value="2">⭐⭐ Fair</option>
                                <option value="1">⭐ Poor</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-3">
                                Comments
                            </label>
                            <textarea
                                name="comment"
                                rows="4"
                                class="w-full px-4 py-3 text-base resize-none"
                                placeholder="Share your thoughts about this meal…"
                            ></textarea>
                        </div>

                        <button
                            type="submit"
                            class="w-full px-6 py-3.5 text-white font-medium text-base shadow-sm hover:shadow-md"
                        >
                            Submit Feedback
                        </button>
                    </form>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <script>
      // Accordion functionality
      document.querySelectorAll("[data-accordion-target]").forEach((button) => {
        button.addEventListener("click", () => {
          const target = document.querySelector(
            button.getAttribute("data-accordion-target")
          );
          const icon = button.querySelector("svg");

          if (target.classList.contains("hidden")) {
            target.classList.remove("hidden");
            icon.classList.add("rotate-180");
          } else {
            target.classList.add("hidden");
            icon.classList.remove("rotate-180");
          }
        });
      });

      // Feedback form validation for all forms
      document.querySelectorAll('.feedback-form form').forEach(form => {
        form.addEventListener('submit', function(e) {
          const rating = form.querySelector('select[name="rating"]').value;
          const comment = form.querySelector('textarea[name="comment"]').value.trim();
          const alphaOnly = /^[A-Za-z\s]+$/;
          let msg = '';

          if (!rating) {
            msg = 'Please select a rating.';
          } else if (!comment) {
            msg = 'Please enter your feedback.';
          } else if (!alphaOnly.test(comment)) {
            msg = 'Comments must be letters and spaces only.';
          }

          if (msg) {
            e.preventDefault();
            Swal.fire({
              icon: 'error',
              title: 'Validation Error',
              text: msg,
              confirmButtonColor: '#3b82f6'
            });
          }
        });
      });
    </script>
    <script src="/js/navbar.js"></script>
  </body>
</html>
