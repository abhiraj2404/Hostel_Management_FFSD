<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hostel Mess Menu</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      .gradient {
        background: linear-gradient(90deg, #004aad 0%, #cb6ce6 100%);
      }
      body {
        font-family: "Poppins", sans-serif;
      }
      
      /* Hero section styling */
      .hero-section {
        background: linear-gradient(90deg, #004aad 0%, #cb6ce6 100%);
        height: 40vh;
        min-height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 0 1rem;
      }
      
      /* Responsive adjustments */
      @media (max-width: 768px) {
        .hero-section {
          height: 30vh;
          min-height: 250px;
        }
        
        .hero-title {
          font-size: 2rem !important;
        }
        
        .accordion-button {
          padding: 1rem !important;
        }
        
        .meal-button {
          padding: 0.75rem !important;
        }
        
        .feedback-form {
          padding: 1rem !important;
        }
      }
      
      @media (max-width: 480px) {
        .hero-section {
          height: 25vh;
          min-height: 200px;
        }
        
        .hero-title {
          font-size: 1.75rem !important;
        }
        
        .day-name {
          font-size: 1rem !important;
        }
        
        .meal-name {
          font-size: 0.875rem !important;
        }
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <%- include('partials/navbar.ejs') %>

    <!-- Hero Section -->
    <div class="hero-section shadow-lg">
      <div class="max-w-4xl mx-auto">
        <h1 class="hero-title text-3xl md:text-4xl font-bold mb-4">MESS MENU</h1>
        <p class="text-lg md:text-xl opacity-90">Check out this week's delicious meals and provide your feedback</p>
      </div>
    </div>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
      <% if (query.feedback === 'success') { %>
      <div class="mb-6 p-4 bg-green-100 border border-green-300 text-green-800 rounded-lg">
        Thank you for your feedback!
      </div>
      <% } %>

      <div id="accordion-menu">
        <% ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'].forEach((day, dayIndex) => { %>
        <div class="border border-gray-200 rounded-xl mb-4">
          <h2 id="accordion-heading-<%= dayIndex %>">
            <button
              type="button"
              class="flex items-center justify-between w-full p-5 font-medium text-gray-500 border-b border-gray-200 rounded-t-xl hover:bg-gray-100 accordion-button"
              data-accordion-target="#accordion-body-<%= dayIndex %>"
              aria-expanded="false"
              aria-controls="accordion-body-<%= dayIndex %>"
            >
              <span class="text-lg font-semibold day-name"><%= day %></span>
              <svg
                class="w-3 h-3 transform transition-transform duration-300"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 10 6"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5 5 1 1 5"
                />
              </svg>
            </button>
          </h2>

          <div id="accordion-body-<%= dayIndex %>" class="hidden">
            <% ['Breakfast', 'Lunch', 'Snacks', 'Dinner'].forEach((meal, mealIndex) => { %>
            <div class="border-t border-gray-200 p-4">
              <button
                type="button"
                class="flex items-center justify-between w-full p-3 font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-100 meal-button"
                data-accordion-target="#meal-body-<%= dayIndex %>-<%= mealIndex %>"
                aria-expanded="false"
                aria-controls="meal-body-<%= dayIndex %>-<%= mealIndex %>"
              >
                <span class="meal-name"><%= meal %></span>
                <svg
                  class="w-3 h-3 transform transition-transform duration-300"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 10 6"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5 5 1 1 5"
                  />
                </svg>
              </button>

              <div
                id="meal-body-<%= dayIndex %>-<%= mealIndex %>"
                class="hidden mt-3 bg-gray-50 rounded-lg p-3"
              >
                <% menuItems.filter(item => item.day === day && item.mealType === meal).forEach(item => { %>
                <div class="py-1 text-gray-600 text-sm">
                  <%= item.name %> 
                  <% if(item.alternateWeek) { %>
                  <span class="text-gray-400 italic ml-2">(Alternate)</span>
                  <% } %> 
                  <% if(item.seasonal) { %>
                  <span class="text-green-500 font-medium ml-2">(Seasonal)</span>
                  <% } %>
                </div>
                <% }); %>

                <!-- Feedback Form -->
                <div class="mt-4 bg-white p-4 rounded-lg border border-gray-200 feedback-form">
                  <form action="/feedback" method="POST" class="space-y-3">
                    <input type="hidden" name="day" value="<%= day %>" />
                    <input type="hidden" name="mealType" value="<%= meal %>" />

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">
                        Rate this meal
                      </label>
                      <select
                        name="rating"
                        class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                        required
                      >
                        <option value="5">⭐⭐⭐⭐⭐</option>
                        <option value="4">⭐⭐⭐⭐</option>
                        <option value="3">⭐⭐⭐</option>
                        <option value="2">⭐⭐</option>
                        <option value="1">⭐</option>
                      </select>
                    </div>

                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">
                        Comments
                      </label>
                      <textarea
                        name="comment"
                        rows="2"
                        class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm"
                      ></textarea>
                    </div>

                    <button
                      type="submit"
                      class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors text-sm sm:text-base"
                    >
                      Submit Feedback
                    </button>
                  </form>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
        <% }); %>
      </div>
    </main>

    <%- include('partials/footer.ejs') %>

    <script>
      // Accordion functionality
      document.querySelectorAll("[data-accordion-target]").forEach((button) => {
        button.addEventListener("click", () => {
          const target = document.querySelector(
            button.getAttribute("data-accordion-target")
          );
          const icon = button.querySelector("svg");

          if (target.classList.contains("hidden")) {
            target.classList.remove("hidden");
            icon.classList.add("rotate-180");
          } else {
            target.classList.add("hidden");
            icon.classList.remove("rotate-180");
          }
        });
      });
    </script>
    <script src="/js/navbar.js"></script>
  </body>
</html>