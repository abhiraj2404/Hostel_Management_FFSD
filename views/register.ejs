<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>Home Page - Hostelia</title>

    <meta name="description" content="Home Page of Hostelia" />
    <meta name="keywords" content="Home Page of Hostelia" />
    <meta name="author" content="Home Page of Hostelia" />

    <!-- External Resources -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700"
      rel="stylesheet"
    />

    <!-- Custom Styles -->
    <style>
      .gradient {
        background: linear-gradient(90deg, #004aad 0%, #cb6ce6 100%);
      }

      body {
        font-family: "Source Sans Pro", sans-serif;
      }

      /* Custom Animations */
      @keyframes slideInLeft {
        from {
          transform: translateX(-100%);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }

      @keyframes slideInRight {
        from {
          transform: translateX(100%);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }

      @keyframes slideInUp {
        from {
          transform: translateY(100%);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      .animate-slideInLeft {
        animation: slideInLeft 0.8s ease-out;
      }

      .animate-slideInRight {
        animation: slideInRight 0.8s ease-out;
      }

      .animate-slideInUp {
        animation: slideInUp 0.8s ease-out;
      }

      /* Card Hover Effect */
      .card-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .card-hover:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      }

      /* Button Hover Effect */
      .btn-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .btn-hover:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      }

      /* Image Hover Effect */
      .img-hover {
        transition: transform 0.3s ease;
      }

      .img-hover:hover {
        transform: scale(1.05);
      }
    </style>
  </head>

  <body class="leading-normal tracking-normal ">
    <div id="transitModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center hidden position: absolute;
    z-index: 1000;">
        <div class="bg-white p-6 rounded-lg shadow-lg w-[800px]">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Create Transit Entry</h2>
    
            <form action="/services/transit" method="POST">
                <!-- Row 1 -->
                <div class="flex space-x-4 mb-3">
                    <div class="w-1/2">
                        <label class="block text-gray-700">Student Name</label>
                        <input type="text" name="studentName" class="w-full p-2 border rounded" required>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-gray-700">Roll Number</label>
                        <input type="number" name="studentRollNumber" class="w-full p-2 border rounded" required>
                    </div>
                </div>
    
                <!-- Row 2 -->
                <div class="flex space-x-4 mb-3">
                    <div class="w-1/2">
                        <label class="block text-gray-700">Hostel</label>
                        <input type="text" name="studentHostel" class="w-full p-2 border rounded" required>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-gray-700">Room Number</label>
                        <input type="number" name="studentRoomNumber" class="w-full p-2 border rounded" required>
                    </div>
                </div>
    
                <!-- Row 3 -->
                <div class="flex space-x-4 mb-3">
                    <div class="w-1/2">
                        <label class="block text-gray-700">Purpose</label>
                        <input type="text" name="purpose" class="w-full p-2 border rounded" required>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-gray-700">Entry/Exit</label>
                        <select name="transitStatus" class="w-full p-2 border rounded" required>
                            <option value="ENTRY">Entry</option>
                            <option value="EXIT">Exit</option>
                        </select>
                    </div>
                </div>
    
                <!-- Row 4 -->
                <div class="flex space-x-4 mb-3">
                    <div class="w-1/2">
                        <label class="block text-gray-700">Date</label>
                        <input type="date" name="date" class="w-full p-2 border rounded" required>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-gray-700">Time</label>
                        <input type="time" name="time" class="w-full p-2 border rounded" required>
                    </div>
                </div>
    
                <!-- Buttons -->
                <div class="flex justify-between mt-4">
                    <button type="button" onclick="closeModal()" class="bg-gray-400 text-white px-4 py-2 rounded-lg">Cancel</button>
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Submit</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Navigation -->
    <%- include('partials/navbar.ejs') %>
    
    <br>
    <div class="pt-24">
      <div
        class="container px-3 mx-auto flex flex-wrap flex-col md:flex-row items-center"
      >
        <h1 class="text-6xl font-bold leading-tight text-center w-full">
          Hostel Services
        </h1>
      </div>
    </div>
    <!-- Buttons for Loading Components -->
    <div class="container mx-auto text-center py-8">
      <button
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-2"
      >
        <a href="/services/problems">Problem</a>
      </button>
      <button
        class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded m-2"
      >
        <a href="/services/register">Entry/Exit</a>
      </button>
      <button
        class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded m-2"
      >
        <a href="/services/chat-room">Chat Room</a>
      </button>
    </div>  
    <h1 class="text-2xl font-bold text-gray-800 text-center text-white px-4 py-3 rounded-md">
        Entry / Exit Register
    </h1>
    <div class="flex justify-center mt-5">
        <button onclick="openModal()" class="bg-blue-500 text-white px-4 py-2 rounded-lg">Create an Entry</button>
    </div>

    <!-- Modal -->
     
    <!-- Hero Section -->
    <section class="bg-gray-50 dark:bg-gray-900 p-3 sm:p-5">
        <div class="mx-auto max-w-screen-xl px-4 lg:px-12">
            <!-- Start coding here -->
            
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-4 py-3">Student Name</th>
                                <th scope="col" class="px-4 py-3">Roll Number</th>
                                <th scope="col" class="px-4 py-3">Hostel</th>
                                <th scope="col" class="px-4 py-3">Room Number</th>
                                <th scope="col" class="px-4 py-3">Purpose</th>
                                <th scope="col" class="px-4 py-3">Entry/Exit</th>
                                <th scope="col" class="px-4 py-3">Date</th>
                                <th scope="col" class="px-4 py-3">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% entryExit.forEach(student => { %>
                                <tr class="border-b dark:border-gray-700">
                                    <td class="px-4 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= student.studentName %></td>
                                    <td class="px-4 py-3"><%= student.studentRollNumber %></td>
                                    <td class="px-4 py-3"><%= student.studentHostel %></td>
                                    <td class="px-4 py-3"><%= student.studentRoomNumber %></td>
                                    <td class="px-4 py-3"><%= student.purpose %></td>
                                    <td class="px-4 py-3"><%= student.transitStatus %></td>
                                    <td class="px-4 py-3"><%= student.date %></td>
                                    <td class="px-4 py-3"><%= student.time %></td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
        </section>

